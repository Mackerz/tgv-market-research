# TMG Market Research Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
# Options: development, staging, production

# =============================================================================
# GCP CONFIGURATION
# =============================================================================
GCP_PROJECT_ID=tmg-market-research
GCP_STORAGE_BUCKET_PHOTOS=tmg-market-research-photos
GCP_STORAGE_BUCKET_VIDEOS=tmg-market-research-videos
GOOGLE_APPLICATION_CREDENTIALS=./backend/gcp-credentials.json
GCP_AI_ENABLED=true

# =============================================================================
# GEMINI API (AI Label Generation)
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_ENABLED=true

# =============================================================================
# AUTHENTICATION
# =============================================================================
API_KEY=your-api-key-here
SECRET_KEY=your-secret-key-here-min-32-chars
SESSION_SECRET_KEY=your-session-secret-key-here

# Google OAuth (Optional - for admin login)
GOOGLE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret-here

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=fastapi_db
DB_HOST=db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:5432/${POSTGRES_DB}

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# OPTIONAL: Rate Limiting
# =============================================================================
# Default rate limit (requests per minute)
# DEFAULT_RATE_LIMIT=100

# =============================================================================
# OPTIONAL: File Upload Limits
# =============================================================================
# MAX_UPLOAD_SIZE_MB=50
# MAX_REQUEST_SIZE_MB=10
